@{
    ViewData["Title"] = "Home Page";
}
@using SecureBrowser.OtherFunctions.Models;
@using SecureBrowser.FirestoreFunctions;

<form class="row justify-content-center">
    <div class="col-lg-12 col-11 mt-3">
        <div class="row justify-content-center mt-5 text-center border-16 bg-blue-light p-5 h-90">

            <div class="col-12">
                <h3 class="font-weight-bold">Student Exam Portal</h3>
            </div>

            <div class="col-12 my-2 text-center">
                <select name="sources" id="College" class="custom-select sources display-select" value="" placeholder="Select College">
                    @foreach (FirestoreCollege m in ViewBag.Colleges)
                    {
                        <option value="@m.Email">@m.Name</option>
                    }
                </select>
            </div>

            <div class="col-4 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Enter Email
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input name="StudentEmail" id="StudentEmail" placeholder="Enter Email" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" type="email" />
                </div>
            </div>

            <div class="col-12">

            </div>

            <div class="col-4 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Enter Password
                        <span class="float-right bg-blue text-white shadow-blue border-10 px-2 py-1 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer" onclick="ShowHidePassword(this)">
                            View
                        </span>

                    </label>
                </div>
                <div class="row justify-content-center">
                    <input name="Password" id="Password" placeholder="Enter Password" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" type="password" />
                </div>
            </div>

            <div class="col-12 my-3 mt-5">
                <a onclick="LoginStudent()" class="bg-blue text-white shadow-blue border-10 px-5 py-3 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer mx-5">
                    Login
                </a>
                <br />
            </div>


            <div class="col-12 my-2 d-none">
                <a onclick="StopInterval()" class="bg-blue text-white shadow-blue border-10 px-4 py-2 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer mx-5">
                    Stop
                </a>
            </div>

        </div>
    </div>
</form>


@section Scripts{
    <script>
        function ShowHidePassword(elem){
            const x = document.getElementById("Password")
            if(x.type == "text"){
                document.getElementById("Password").type = "password"
            }
            else{
                document.getElementById("Password").type = "text"
            }

        }
    </script>
}