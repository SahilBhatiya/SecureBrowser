
@{
    ViewData["Title"] = "Password";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<a onclick="window.location = '/Dashboard/Settings'" class="SettingBack mb-3 cursor-pointer smooth-transition"><span class="smooth-transition">←</span>Setting</a>

<h1 class="PageHeading">
    Change Password
</h1>

<div class="row justify-content-center">
    <div class="col-md-8 bg-white-color my-4 mt-5 ml-3 p-4 border-16 shadow-2">
        <form id="UpdatePasswordForm" method="post" class="row justify-content-center" onsubmit="return false;">

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Password" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Old Password
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="password" name="Password" placeholder="Old Password" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-10 border-top my-3"></div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Password1" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        New Password
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="password" name="Password1" placeholder="New Password" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="NewPassword" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Confirm Password
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="password" name="NewPassword" placeholder="Confirm Password" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>


            <div class="col-12 text-center mt-5">
                <button id="update-profile-button" type="submit" class="btn btn-primary-color border-10 text-white font-weight-bold letter-spacing-1 px-5 py-3 outline-none primary-btn-shadow smooth-transition" onclick="UpdatePassword()">Update</button>
            </div>

        </form>
    </div>
</div>
