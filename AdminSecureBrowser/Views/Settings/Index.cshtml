
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<a onclick="window.location = '/Dashboard/Settings'" class="SettingBack mb-3 cursor-pointer smooth-transition"><span class="smooth-transition">←</span>Setting</a>

<h1 class="PageHeading">
    Manage @ViewBag.User.Name
</h1>

<div class="row justify-content-center">
    <div class="col-md-8 bg-white-color my-4 mt-5 ml-3 p-4 border-16 shadow-2">
        <form id="UpdateBasicDetails" method="post" class="row justify-content-center" onsubmit="return false;">

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Change Your Name
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" name="Name" placeholder="Change Name" value="@ViewBag.User.Name" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Mobile" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Change Mobile Number
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" name="Mobile" placeholder="Change Mobile Number" value="@ViewBag.User.Mobile" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-10 border-top my-5"></div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Country" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Change Country
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" name="Country" placeholder="Change Country" value="@ViewBag.User.Country" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="State" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Change State
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" name="State" placeholder="Change State" value="@ViewBag.User.State" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Change City
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" name="City" placeholder="Change City" value="@ViewBag.User.City" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-8 my-3 text-center">
                <div class="row justify-content-center">
                    <label for="Pincode" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                        Change Pincode
                    </label>
                </div>
                <div class="row justify-content-center">
                    <input type="number" name="Pincode" placeholder="Change Pincode" value="@ViewBag.User.Pincode" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                </div>
            </div>

            <div class="col-12 text-center mt-5">
                <button id="update-profile-button" type="submit" class="btn btn-primary-color border-10 text-white font-weight-bold letter-spacing-1 px-5 py-3 outline-none primary-btn-shadow smooth-transition" onclick="UpdateBasicDetails()">Update</button>
            </div>

        </form>
    </div>
</div>
