@{
    ViewData["Title"] = "Create";
}



<div class="row justify-content-center" onload="getLocation()">
    <form class="col-lg-12 col-11 mt-3" id="CreateCollege" onsubmit="return false">
        <div class="row mt-5 text-center border-16 bg-blue-light p-5 justify-content-center">
            <div class="col-12 justify-item-start">
                            <a onclick="window.location = '/Dashboard/Colleges'" class="SettingBack mb-3 cursor-pointer smooth-transition"><span class="smooth-transition">←</span>Colleges</a>
<h1 class="PageHeading">
    Add New College
</h1>
            </div>


            <div class="col-12 my-3 text-center">
                <input type="text" name="Name" placeholder="Enter College Name" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-12 my-3 text-center">
                <input type="email" name="Email" placeholder="Enter Email" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-12 border-top w-75 my-4"></div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="Mobile" placeholder="Enter Phone Number" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="Country" placeholder="Enter Country" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="State" placeholder="Enter State" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="City" placeholder="Enter City" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="number" name="Pincode" placeholder="Enter City's Pincode" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-md-6 col-12 my-3 text-center">
                <input type="text" name="DefaultLink" placeholder="Enter College's Link" class="py-3 px-4 border-0 border-12 shadow-2 shadow-1-hover smooth-transition font-weight-bold" />
            </div>

            <div class="col-12 my-3 mt-5">
                <input onclick="CreateCollege()" class="bg-blue text-white shadow-blue border-10 px-5 py-3 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer mx-5 border-0" type="submit" value="Add">
            </div>


            <div class="col-12 my-2 d-none">
                <a onclick="StopInterval()" class="bg-blue text-white shadow-blue border-10 px-4 py-2 bg-blue-hover shadow-blue-hover smooth-transition cursor-pointer mx-5">
                    Stop
                </a>
            </div>

        </div>
    </form>
</div>
