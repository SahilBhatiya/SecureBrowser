@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<a onclick="window.location = '/Dashboard/Exams'" class="SettingBack mb-3 cursor-pointer smooth-transition"><span class="smooth-transition">←</span>Exams</a>


<h1 class="PageHeading mt-2">
    <span class="pageSubTitle d-block fg-primary-color mb-1">Welcome, @ViewBag.User.Name</span>
    Update Exam
</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white-color my-4 mt-5 ml-3 p-4 border-16 shadow-2">
            <form id="UpdateExam" class="row justify-content-center" onsubmit="return false;">


                <div class="col-8 my-3 text-center d-none">
                    <div class="row justify-content-center">
                        <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                            Update Id
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <input name="Id" placeholder="Enter Batch Year" value="@ViewBag.exam.Id" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" type="text" />
                    </div>
                </div>


                <div class="col-8 my-3 text-center">
                    <div class="row justify-content-center">
                        <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                            Update Semester (Current : @ViewBag.exam.Semester Sem)
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <select name="Semester" id="Semester" class="custom-select sources" placeholder="select Semester" value="@ViewBag.exam.Semester">
                            @for (int i = 1; i <= 10; i++)
                            {
                                if (ViewBag.exam.Semester == i.ToString())
                                {
                                    <option value="@i" selected>@i th Sem </option>
                                }
                                else
                                {
                                    <option value="@i">@i th Sem </option>
                                }

                            }
                        </select>
                    </div>
                </div>
                @{
                    DateTime Start = DateTime.ParseExact(ViewBag.exam.Start.ToString().Replace("Timestamp:", "").Trim(),
            "yyyy-MM-ddTHH:mm:ffZ", null);
                    Start = Start.AddHours(-6).AddMinutes(30);

                    DateTime End = DateTime.ParseExact(ViewBag.exam.End.ToString().Replace("Timestamp:", "").Trim(),
                    "yyyy-MM-ddTHH:mm:ffZ", null);
                    End = End.AddHours(-6).AddMinutes(30);
                }
                <input type="text" value="@Start" name="OldStart" placeholder="Enter Email" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100 d-none"/>
                <div class="col-8 my-3 text-center">
                    <div class="row justify-content-center">
                        <label for="Start" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                            Enter Start Date And Time (@Start)
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <input type="datetime-local" name="Start" placeholder="Enter Email" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100"/>
                    </div>
                </div>


                <input type="text" value="@End" name="OldEnd" placeholder="Enter Email" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100 d-none"/>
                <div class="col-8 my-3 text-center">
                    <div class="row justify-content-center">
                        <label for="End" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                            Enter End Date And Time (@End)
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <input type="datetime-local" name="End" placeholder="Enter Email" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100" />
                    </div>
                </div>


                <div class="col-8 my-3 text-center">
                    <div class="row justify-content-center">
                        <label for="Name" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                            Update Exam Name
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <input type="text" id="Name" name="Name" placeholder="Enter Name" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100 "
                               value="@ViewBag.exam.Name" />
                    </div>
                </div>


                <div class="col-8 my-3 text-center ">
                    <div class="row justify-content-center">
                        <label for="Email" class="w-100 fg-secondary font-weight-bold letter-spacing-1 text-center text-lg-left">
                            Update Exam Link
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <input type="text" id="Link" name="Link" placeholder="Enter Link" class="py-3 px-4 border-0 border-12 shadow-1 bg-blue-light-hover smooth-transition font-weight-bold w-100 "
                               value="@ViewBag.exam.Link" />
                    </div>
                </div>


                <div class="col-12 text-center mt-5">
                    <button id="update-profile-button" type="submit" class="btn btn-primary-color border-10 text-white font-weight-bold letter-spacing-1 px-5 py-3 outline-none primary-btn-shadow smooth-transition" onclick="UpdateExam()">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


